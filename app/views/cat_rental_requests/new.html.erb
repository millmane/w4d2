<form action = "/cat_rental_requests" method = "POST">

  <p>Make a new cat rental request!</p>

  <label for="cat_choice">Cat Choice</label>

  <select name="rental_request[cat_id]" id="cat_choice">

    <% @cats.each do |cat| %>
      <option value=<%= cat.id %>><%= cat.name %>, <%= cat.color %>, <%= cat.birthdate %></option>
    <% end %>

  </select>

  <p> <label for="start_date">Start Date</label>
      <input type = "date" name = "rental_request[start_date]" id = "start_date" ></p>

  <p> <label for="end_date">End Date</label>
      <input type = "date" name = "rental_request[end_date]" id = "end_date" ></p>

      <input type="submit" value="Submit rental request">
</form>
